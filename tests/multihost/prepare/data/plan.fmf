provision:
  - name: server-one
    role: server
    how: container
  - name: server-two
    role: server
    how: container
  - name: client-one
    role: client
    how: container
  - name: client-two
    role: client
    how: container
/prepare:
    /all:
        prepare:
            how: shell
            script: echo 'All'
    /name:
        prepare:
            how: shell
            on: server-one
            script: echo 'Server one'
    /role:
        prepare:
            how: shell
            on: server
            script: echo 'Server'
    /combined:
        prepare:
          - how: shell
            on: client-one
            script: echo 'Client one'
          - how: shell
            on: server
            script: echo 'Server'
          - how: shell
            script: echo 'All'
execute:
    script: tmt --help
